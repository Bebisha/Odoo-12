            <field name="company_id" ref="base.main_company"/>
            <field name="tax_group_id" ref="tax_group_spreadt_vat0"/>
        </record>

        <record model="account.tax.template" id="purchase_vat_0_spreadt">
            <field name="name">VAT 0%</field>
            <field name="description">VAT 0%</field>
            <field name="amount" eval="0"/>
            <field name="amount_type">percent</field>
            <field name="chart_template_id" ref="configurable_chart_template_spreadt"/>
            <field name="type_tax_use">purchase</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="tax_group_id" ref="tax_group_spreadt_vat0"/>
        </record>
    </data>
</odoo>