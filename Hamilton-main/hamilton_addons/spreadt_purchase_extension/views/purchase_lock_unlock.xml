<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_purchase_inherit_lock_form" model="ir.ui.view">
        <field name="name">view.purchase.inherit.lock.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_done']" position="attributes">
                <attribute name='groups'>purchase.group_purchase_manager</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_product_price_history_tree" model="ir.ui.view">
        <field name="name">view.product.price.history.tree</field>
        <field name="model">product.price.history</field>
        <field name="arch" type="xml">
            <tree string="Product Cost History" create="false" edit="false" delete="false">
                <field name="product_id"/>
                <field name="cost" invisible="0"/>
                <field name="datetime"/>
            </tree>
        </field>
    </record>

    <record id="inherit_purchase_order_form_view" model="ir.ui.view">
            <field name="name">purchase.order.form.view.stock</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_qty']" position="before">
                    <field name="stock_available"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="attributes">
                    <attribute
                            name="context">{'is_show_data': True,'partner_id':parent.partner_id, 'quantity':product_qty,'uom':product_uom, 'company_id': parent.company_id}</attribute>
                </xpath>
            </field>
        </record>

    <record id="product_price_history_action_id" model="ir.actions.act_window">
        <field name="name">Product Cost History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.price.history</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_product_price_history_tree"/>
        <field name="view_mode">tree</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_product_price_history">
        <field name="sequence" eval="0"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_product_price_history_tree"/>
        <field name="act_window_id" ref="product_price_history_action_id"/>
    </record>

    <record id="purchase_order_view_form_inherit_receipt" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_stock.purchase_order_view_form_inherit"/>
        <field name="arch" type="xml">
            <xpath
                    expr="//div[hasclass('oe_button_box')]//button[@name='action_view_picking']/field[@name='picking_count']"
                   position="attributes">
                <attribute name="string">Receiving</attribute>
            </xpath>

        </field>
    </record>

    <menuitem id="product_price_history_menu_id" name="Product Cost History" parent="purchase.menu_purchase_control"
              action="product_price_history_action_id" sequence="50"/>



</odoo>


