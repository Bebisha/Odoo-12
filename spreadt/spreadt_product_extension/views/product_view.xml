<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Product Template Form View -->
        <record id="inherit_product_template_only_form_view" model="ir.ui.view">
            <field name="name">inherit.product.template.only.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="country_origin_id"/>
                    <field name="hs_code"/>
                </xpath>
                <xpath expr="//field[@name='default_code']"
                       position="attributes">
                    <attribute name="attrs">{'invisible':
                        [('product_variant_count', '&gt;', 1)],
                        'required':1}</attribute>
                </xpath>
            </field>
        </record>
        
        <!-- Inherit Product Form View -->
        <record id="inherit_product_product_only_form_view" model="ir.ui.view">
            <field name="name">inherit.product.product.only.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="country_origin_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>