<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="inherit_crm_case_form_view_oppor" model="ir.ui.view">
            <field name="name">inherit.crm.case.form.view.oppor</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="price_category_id" />
                </xpath>
                <xpath expr="//page[@name='lead']" position="after">
                    <page string="Product Lines">
                        <field name="crm_lead_line_ids">
                            <tree editable="bottom">
                                <!--<field name="price_category_id"/>-->
                                <field name="product_id" required="1"/>
                                <field name="uom_id"/>
                                <field name="quantity"/>
                                <field name="quoted_price"/>
                                <field name="total_price" sum="total_price"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

        <record id="inherit_crm_crm_case_form_view_leads_price" model="ir.ui.view">
            <field name="name">inherit.crm.crm_case_form_view_leads.price</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="price_category_id" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>