<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="multi_so_confirm_view" model="ir.ui.view">
            <field name="name">multi.so.confirm.form</field>
            <field name="model">sale.order.confirm</field>
            <field name="arch" type="xml">
                <form string="Confirm Draft SO">
                    Are you sure you want to Override Credit Limit?
                    <footer>
                        <button string="Override Credit Limit"
                                name="so_confirm"
                                type="object"
                                default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-default"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window
                id="action_multi_so_confirm"
                multi="True"
                key2="client_action_multi"
                name="Override Credit Limit"
                res_model="sale.order.confirm"
                src_model="sale.order"
                view_mode="form"
                target="new"
                view_type="form"
                groups='customer_credit_limit.group_credit_limit'/>
    </data>
</odoo>
