<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_pickinglist_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <div class="page" style="font-size: 10pt;">
                    <div class="row mt8" >
                        <div class="col-12">
                            <div>
                                <span><strong>Ship To:</strong></span>
                            </div>
                            <div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header">
                                <div t-field="o.move_lines[0].partner_id"
                                   t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                            </div>
                            <div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id" name="partner_header">
                                <div t-field="o.partner_id"
                                   t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h3><center>PACKING LIST AND WEIGHT</center></h3>
                        </div>
                    </div>
                    <div class="row" name="customer_address">
                        <div class="col-6 pull-left">
                        </div>
                        <div class="col-6 pull-right">
                            <t t-set="so_data" t-value="o.get_so_date()" />
                             <table
                                     class="table table-sm table-condensed" style="border: 2px solid black">
                                <thead>
                                    <tr style="border: 2px solid black">
                                        <th style="border: 2px solid black">
                                            <span>Invoice #</span>
                                        </th>
                                        <td style="border: 2px solid black">
                                            <span t-esc="so_data[0].get('invoice_number')"/>
                                        </td>
                                    </tr>
                                    <tr style="border: 2px solid black">
                                        <th style="border: 2px solid black">
                                            <span>Shipping Date:</span>
                                        </th>
                                        <td style="border: 2px solid black">
                                            <span t-field="o.scheduled_date"/>
                                        </td>
                                    </tr>
                                     <tr style="border: 2px solid black">
                                        <th style="border: 2px solid black">
                                            <span>Country Of origin:</span>
                                        </th>
                                        <td style="border: 2px solid black">
                                           <span t-esc="so_data[0].get('country_origin')"/>
                                        </td>
                                    </tr>
                                     <tr style="border: 2px solid black">
                                        <th style="border: 2px solid black">
                                            <span>HS Code:</span>
                                        </th>
                                        <td style="border: 2px solid black">
                                            <span t-esc="so_data[0].get('hs_code')"/>
                                        </td>
                                    </tr>
                                     <tr style="border: 2px solid black">
                                        <th style="border: 2px solid black">
                                            <span>Total No of Cartoons:</span>
                                        </th>
                                        <td style="border: 2px solid black">
                                            <span t-esc="so_data[0].get('no_of_box')"/>
                                        </td>
                                    </tr>
                                     <tr style="border: 2px solid black">
                                        <th style="border: 2px solid black">
                                            <span>Total Net Weight(KG):</span>
                                        </th>
                                        <td style="border: 2px solid black">
                                            <span t-esc="so_data[0].get('net_weight')"/>
                                        </td>
                                    </tr>
                                     <tr style="border: 2px solid black">
                                        <th style="border: 2px solid black">
                                            <span>Total Gross Weight(KG):</span>
                                        </th>
                                        <td style="border: 2px solid black">
                                             <span t-esc="so_data[0].get('gross_weight')"/>
                                        </td>
                                    </tr>
                                    <tr style="border: 2px solid black">
                                        <th style="border: 2px solid black">
                                            <span>Total Value(CBM):</span>
                                        </th>
                                        <td style="border: 2px solid black">
                                             <span t-esc="so_data[0].get('total_cbm')"/>
                                        </td>
                                    </tr>
                                </thead>
                    </table>
                        </div>
                    </div>
                    <table class="table table-sm table-condensed mt8">
                        <thead>
                            <tr style="border: 1px solid black">
                                <th style="border: 1px solid black"><strong>Quantity</strong></th>
                                <th style="border: 1px solid black"><strong>Product Code</strong></th>
                                <th style="border: 1px solid black"><strong>HS Code</strong></th>
                                <th style="border: 1px solid black"><strong>
                                    Item Description</strong></th>
                                <th style="border: 1px solid black"><strong>Country Of Origin</strong></th>
                                <th style="border: 1px solid black"><strong>Cartoons</strong></th>
                                <th style="border: 1px solid black"><strong>Net Weight(Kg)</strong></th>
                                <th style="border: 1px solid black"><strong>Gross Weight(Kg)</strong></th>
                                <th style="border: 1px solid black"><strong>CBM</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <t t-set="categ_data" t-value="o.get_product_categ()" />
                                <td style="border: 1px solid black">
                                    <span
                                            t-esc="sum(o.move_lines.mapped('quantity_done'))"/>
                                </td>
                                <td style="border: 1px solid black">As Mentioned Below</td>
                                <td style="border: 1px solid black">As Mentioned Below</td>
                                <td style="border: 1px solid black"><span t-esc="categ_data[0].get('category')"/></td>
                                <td style="border: 1px solid black"><span t-esc="categ_data[0].get('country')"/></td>
                                <td style="border: 1px solid black"><span t-esc="so_data[0].get('no_of_box')"/></td>
                                <td style="border: 1px solid black"><span t-esc="so_data[0].get('net_weight')"/></td>
                                <td style="border: 1px solid black"> <span t-esc="so_data[0].get('gross_weight')"/></td>
                                <td style="border: 1px solid black"><span t-esc="so_data[0].get('total_cbm')"/></td>
                            </tr>
                            <tr>
                                <td colspan="9"
                                    style="border: 1px solid black"><center><b>The below mentioned
                                    items and quantity are in side of the
                                    box.</b></center></td>
                            </tr>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move" style="border: 1px solid black">
                                <td style="border: 1px solid black">
                                    <span t-esc="'%.1f'% move.product_uom_qty"/>
                                </td>
                                <td style="border: 1px solid black"><span t-field="move.product_id.default_code"/></td>
                                <td style="border: 1px solid black"><span t-field="move.product_id.hs_code"/></td>
                                <td style="border: 1px solid black"><span
                                        t-field="move.product_id.name"/></td>
                                <td style="border: 1px solid black"><span t-field="move.product_id.country_origin_id"/></td>
                                <td style="border: 1px solid black"></td>
                                <td style="border: 1px solid black"></td>
                                <td style="border: 1px solid black"></td>
                                <td style="border: 1px solid black"></td>
                            </tr>
                        </tbody>
                    </table>
                    <p t-if="o.backorder_id">
                        This shipment is a backorder of <t t-esc="o.backorder_id.name"/>.
                    </p>
                    <p>
                        <t t-if="o.search([('backorder_id', '=', o.id), ('state', 'not in', ['cancel', 'done'])])">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                        </t>
                    </p>
                </div>
            </t>
         </t>
    </template>

    <template id="report_pickinglist_view">
        <t t-foreach="docs" t-as="o">
            <t t-call="spreadt_stock_reports.report_pickinglist_document" t-lang="o.partner_id.lang"/>
        </t>
    </template>
</odoo>
