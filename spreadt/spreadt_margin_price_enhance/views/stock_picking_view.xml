<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_consignment_margin_form" model="ir.ui.view">
        <field name="name">stock.picking.consignment.margin.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="price_category_id"
                       attrs="{'invisible': [('picking_type_code', 'in', ('outgoing', 'incoming'))]}"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="sale_price" attrs="{'column_invisible': [('parent.picking_type_code', 'in', ('outgoing', 'incoming'))]}"/>
            </xpath>
        </field>
    </record>

</odoo>