<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Header Footer -->
        <template id="report_invoice_doc_header">
            <div class="header o_background_header" style="font-size: 10pt;">
                <div class="pull-right">
                    <h3 class="mt0 text-right"
                        t-esc="o.company_id.report_header"/>
                </div>
                <div class='row'>
                    <div class='col-3'>
                        <img t-if="o.company_id.logo"
                             t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)"
                             class="pull-left" height="50" width="200"/>
                    </div>
                    <div class='col-9'>
                        <div>
                            <span t-esc="o.company_id.partner_id.name"/>
                        </div>
                        <span t-field="o.company_id.partner_id"
                              t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/>
                        TRN:
                        <span t-field="o.company_id.vat"/>
                    </div>
                </div>
                <div class="pull-right text-right">
                    <b>
                        <div>
                            <h3 class="text-right">
                                <span
                                        t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid') and o.local_export == 'export' ">
                                    Invoice
                                </span>
                                <span
                                        t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid') and o.local_export == 'local' ">
                                    Tax Invoice
                                </span>
                                <span t-if="o.type == 'out_refund' and (o.state == 'open' or o.state == 'paid')">
                                    Credit Note
                                </span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">
                                    Draft Invoice
                                </span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">
                                    Cancelled Invoice
                                </span>
                                <span t-if="o.type == 'out_refund' and o.state == 'draft'">
                                    Draft Credit Note
                                </span>
                                <span t-if="o.type == 'out_refund' and o.state == 'cancel'">
                                    Cancelled Credit Note
                                </span>
                            </h3>
                        </div>
                        <t t-if="o.number">
                            <div class="text-right">
                                <span t-field="o.number"/>
                            </div>
                        </t>
                        <t t-if="o.date_invoice">
                            <div class="text-right">
                                <span t-field="o.date_invoice"/>
                            </div>
                        </t>
                    </b>
                </div>
            </div>
            <div class="article o_report_layout_background"
                 t-att-data-oe-model="o and o._name"
                 t-att-data-oe-id="o and o.id">
                <t t-raw="0"/>
            </div>

            <div class="footer o_background_footer" style="font-size: 10pt;">
                <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="o.company_id.phone">
                            <i class="fa fa-phone"/>
                            <span t-field="o.company_id.phone"/>
                        </li>
                        <li t-if="o.company_id.email">
                            <i class="fa fa-at"/>
                            <span t-field="o.company_id.email"/>
                        </li>
                        <li t-if="o.company_id.website">
                            <i class="fa fa-globe"/>
                            <span t-field="o.company_id.website"/>
                        </li>
                    </ul>
                    <div t-field="o.company_id.report_footer"/>
                    <div class="text-muted">
                        Page:
                        <span class="page"/>
                        of
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="report_invoice_doc">
            <t t-call="spreadt_invoice_report.report_invoice_doc_header">
                <t t-set="o"
                   t-value="o.with_context({'lang':o.partner_id.lang})"/>
                <div class="page" style="font-size: 10pt;">
                    <div class="row">
                        <div class="col-12">
                            <div class="col-6 pull-left">
                                <div t-if="o.partner_id.id">
                                    <span>
                                        <strong>Bill To</strong>
                                    </span>
                                    <div t-field="o.partner_id"
                                         t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;mobile&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                                    <t t-if="o.partner_id.vat">
                                        <span>TRN:
                                            <span
                                                    t-field="o.partner_id.vat"/>
                                        </span>
                                    </t>
                                </div>
                            </div>
                            <div class="col-6 pull-right">
                                <div t-if="o.partner_shipping_id.id">
                                    <span>
                                        <strong>Ship To</strong>
                                    </span>
                                    <div t-field="o.partner_shipping_id"
                                         t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;mobile&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                                    <t t-if="o.partner_shipping_id.vat">
                                        <span>TRN:
                                            <span
                                                    t-field="o.partner_shipping_id.vat"/>
                                        </span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>

                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th style="border: 1px solid black;"
                                    class="text-center">Due Date
                                </th>
                                <th style="border: 1px solid black;"
                                    class="text-center">Date
                                </th>
                                <th style="border: 1px solid black;"
                                    class="text-center">SO Number
                                </th>
                                <th style="border: 1px solid black;"
                                    class="text-center">P.O.NO
                                </th>
                                <th style="border: 1px solid black;"
                                    class="text-center">Terms
                                </th>
                                <th style="border: 1px solid black;"
                                    class="text-center">Ship Track No
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="border: 1px solid black;"
                                    class="text-center">
                                    <t t-if="o.local_export == 'local'">
                                        <span t-field="o.date_due"/>
                                    </t>
                                </td>
                                <td class="text-center"
                                    style="border: 1px solid black;">
                                    <span t-field="o.date_invoice"/>
                                </td>
                                <td style="border: 1px solid black;"
                                    class="text-center">
                                    <t t-if="o.origin">
                                        <span t-field="o.origin"/>
                                    </t>
                                </td>
                                <td style="border: 1px solid black;"
                                    class="text-center">
                                    <t t-if="o.name">
                                        <span t-field="o.name"/>
                                    </t>
                                </td>
                                <td style="border: 1px solid black;"
                                    class="text-center">
                                    <span t-field="o.payment_term_id.note"/>
                                </td>
                                <td style="border: 1px solid black;"
                                    class="text-center"/>
                            </tr>
                            <tr>
                                <t t-if="o.sale_order_id.partner_id.local_export == 'local' and
                                        o.sale_order_id.partner_id.is_reseller == True and o.sale_order_id.partner_id.operation_type_id">
                                    <td colspan="6"
                                        style="border: 1px solid black;">
                                        <span
                                                t-esc="o.sale_order_id.partner_id.operation_type_id.default_location_dest_id.name"/>
                                    </td>
                                </t>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Is there a discount on at least one line? -->

                    <table class="table table-sm"
                           width="100%"
                           style="border-collapse: collapse;"
                           name="invoice_line_table">
                        <t t-set="total_qty" t-value="0"/>
                        <thead>
                            <tr>
                                <th style="border: 1px solid black;">Item NO
                                </th>
                                <t t-if="o.local_export == 'export'">
                                    <th style="border: 1px solid black;">HS
                                        Code
                                    </th>
                                    <th style="border: 1px solid black;">
                                        Country of Origin
                                    </th>
                                </t>
                                <th style="border: 1px solid black;">
                                    Description
                                </th>
                                <th style="border: 1px solid black;"
                                    class="text-right">Units
                                </th>
                                <th style="border: 1px solid black;"
                                    class="text-right">Cost
                                </th>
                                <th style="border: 1px solid black;"
                                    class="text-right">Amount
                                </th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr t-foreach="o.invoice_line_ids" t-as="l">
                                <td style="border: 1px solid black;">
                                    <span t-field="l.product_id.default_code"/>
                                </td>
                                <t t-if="o.local_export == 'export'">
                                    <td style="border: 1px solid black;">
                                        <span t-field="l.hs_code"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-field="l.country_origin_id.name"/>
                                    </td>
                                </t>
                                <t t-if="l.display_type not in ('line_section', 'line_note')">
                                  <td style="border: 1px solid black;">
                                    <span t-field="l.name"/>
                                  </td>
                                  <td style="border: 1px solid black;" class="text-right">
                                      <span t-field="l.quantity"/>
                                      <t t-set="total_qty" t-value="total_qty+l.quantity"/>
                                      <span t-field="l.uom_id" groups="product.group_uom"/>
                                  </td>
                                  <td style="border: 1px solid black;" class="text-right">
                                      <span t-field="l.price_unit"/>
                                  </td>

                                  <td style="border: 1px solid black;" class="text-right" id="subtotal">
                                      <span t-field="l.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                  </td>
                                </t>
                                <t t-if="l.display_type in ('line_section', 'line_note')">
                                  <td colspan='4' style="border: 1px solid black;">
                                    <span t-field="l.name"/>
                                  </td>
                                </t>
                            </tr>
                            <tr>
                                <t t-if="o.local_export == 'export'">
                                    <td style="border: 1px solid black;"
                                        class="text-right"
                                        colspan="4">
                                        <b>Total</b>
                                    </td>
                                </t>
                                <t t-if="o.local_export != 'export'">
                                    <td style="border: 1px solid black;"
                                        class="text-right"
                                        colspan="2">
                                        <b>Total</b>
                                    </td>
                                </t>
                                <td style="border: 1px solid black;"
                                    class="text-lft">
                                    <t t-esc="total_qty"/>
                                </td>
                                <td colspan="2" class="text-right"
                                    style="border: 1px solid black;">
                                    <span t-field="o.amount_untaxed"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div
                                    t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm">
                                    <t t-foreach="o.amount_by_group"
                                       t-as="amount_by_group">
                                        <tr style="border-bottom:1px solid #dddddd;">
                                            <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;
                                                        <span>on</span>
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <td>
                                            <strong>Total Amount</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                    <t t-set="payments_vals" t-value="o._get_payments_vals()"/>
                                    <t t-foreach="payments_vals" t-as="payment_vals">
                                        <tr>
                                            <td>
                                                <t t-if="payment_vals['invoice_id']">
                                                    <i
                                                            class="oe_form_field text-right oe_payment_label">Credit Note <t t-esc="payment_vals['ref']"/> <t t-esc="payment_vals['date']"/></i>
                                                </t>
                                                <t t-if="not payment_vals['invoice_id']">
                                                <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']"/></i></t>
                                                </td>
                                            <td class="text-right">
                                                <span t-esc="payment_vals['amount']" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="len(payments_vals) &gt; 0">
                                        <tr class="border-black">
                                            <td><strong>Amount Due</strong></td>
                                            <td class="text-right">
                                                 <span t-field="o.residual"/>
                                            </td>
                                        </tr>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </div>
                    <t t-if="o.local_export == 'export'">
                        <div class="row">
                            <div class="col-12">
                                <p>
                                    <center>
                                        <b>All Currency is in UAE
                                            Dirham
                                        </b>
                                    </center>
                                </p>
                            </div>
                        </div>
                    </t>
                    <t t-if="o.local_export == 'local'">
                        <div class="row">
                            <div class="col-12">
                                <p>
                                    <b>Gross Amount In Letters:</b>
                                    <span t-esc="o.currency_id.amount_to_text(o.amount_total)"/>
                                </p>
                            </div>
                        </div>
                    </t>
                    <br/>
                    <t t-if="o.local_export == 'local'">
                        <div class="row">
                            <div class="col-12">
                                <p>
                                    <b>Stamp and Signature:</b>
                                </p>
                            </div>
                        </div>
                    </t>
                    <div class="row">
                        <div class="col-7 pull-left">
                            <t t-if="o.local_export == 'export'">
                                <table class="table table-sm">
                                    <tr class="border-black">
                                        <td
                                                style="width: 150px;border: 1px solid black;">
                                            <strong>No Of Box</strong>
                                        </td>
                                        <td style="border: 1px solid black;"
                                            class="text-left">
                                            <span t-field="o.no_of_box"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td style="border: 1px solid black;">
                                            <strong>Country Of Origin</strong>
                                        </td>
                                        <td style="border: 1px solid black;"
                                            class="text-left">
                                            <span t-field="o.country_origin"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td style="border: 1px solid black;">
                                            <strong>HS Code</strong>
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid black;">
                                            <span t-field="o.hs_code"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td style="border: 1px solid black;">
                                            <strong>Net Weight(KG)</strong>
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid black;">
                                            <span t-field="o.net_weight"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td style="border: 1px solid black;">
                                            <strong>Gross Weight(KG)</strong>
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid black;">
                                            <span t-field="o.gross_weight"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td style="border: 1px solid black;">
                                            <strong>Total Value(CBM)</strong>
                                        </td>
                                        <td class="text-left"
                                            style="border: 1px solid black;">
                                            <span t-field="o.total_cbm"/>
                                        </td>
                                    </tr>
                                </table>
                            </t>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="spreadt_invoice_report.report_invoice_doc"
                       t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>
