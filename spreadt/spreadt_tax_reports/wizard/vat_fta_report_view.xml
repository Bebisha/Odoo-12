<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VAT FTA Report Wizard -->
    <record id="accounting_vat_tax_wiz_form_view" model="ir.ui.view">
        <field name="name">VAT FTA</field>
        <field name="model">vat.fta.wiz</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="vat_fta" col="4">
                        <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                        <field name="company_id" required="1"/>
                   </group>
                   <group string="Declaration and Authorised Signatory" col="4">
                        <field name="ph_country_code" />
                        <field name="ph_number"/>
                        <field name="name"/>
                   </group>
                </sheet>
                <footer>
                    <button name="print_report" string="Print" type="object"
                            class="oe_highlight" />
                        or
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_vat_fta_wiz" model="ir.actions.act_window">
        <field name="name">VAT FTA</field>
        <field name="res_model">vat.fta.wiz</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="accounting_vat_tax_wiz_form_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
    <menuitem
        id="menu_tax_report"
        name="Tax Reports"
        parent="account.menu_finance_reports"
        groups="account.group_account_manager,account.group_account_user"/>

    <menuitem 
        id="menu_vat_fta_report"
        name="Vat FTA Report"
        action="action_vat_fta_wiz"
        parent="menu_tax_report"
        sequence="1"
        groups="account.group_account_manager,account.group_account_user"/>
</odoo>