<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inventory_valuation_with_margin" model="ir.ui.view">
            <field name="name">inventory.valuation.with.margin</field>
            <field name="model">stock.quant</field>
            <field name="arch" type="xml">
                <tree string="Inventory Valuation" create="0" delete="0" decoration-danger="quantity &lt; 0">
                    <field name="product_id"/>
                    <field name="location_id"/>
                    <field name="lot_id" groups="stock.group_production_lot"/>
                    <field name="package_id" groups="stock.group_tracking_lot"/>
                    <field name="owner_id" groups="stock.group_tracking_owner"/>
                    <field name="reserved_quantity" string="Reserved"/>
                    <field name="quantity" string="On Hand"/>
                    <field name="sale_price" string="Sale Price"/>
                    <field name="product_uom_id" groups="product.group_uom"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="action_stock_quantity_margin_history"
                model="ir.actions.act_window">
            <field name="name">Inventory with Margin</field>
            <field name="res_model">stock.quantity.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="stock.view_stock_quantity_history"/>
            <field name="target">new</field>
            <field name="context">{'is_consignee_location': True,
                'default_compute_at_date': 0}</field>
        </record>

        <menuitem id="menu_valuation_with_margin"
                  name="Inventory for Consignee Location"
                  parent="stock.menu_warehouse_report" sequence="101"
                  action="action_stock_quantity_margin_history"/>

        <record model='ir.ui.menu' id='stock.menu_warehouse_report'>
            <field name="name">Inventory</field>
            <field name="groups_id"
                   eval="[(6, 0, [ref('stock.group_stock_user')])]"/>
        </record>

    </data>
</odoo>